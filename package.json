{
  "name": "shogun-arrangement",
  "version": "0.1.0",
  "description": "Multi-agent AI-driven development system with tmux orchestration",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "check:pr-size": "tsx scripts/quality-gates/check-pr-size.ts",
    "check:coverage": "tsx scripts/quality-gates/check-coverage.ts",
    "check:security": "tsx scripts/quality-gates/check-security.ts",
    "quality-gates": "tsx scripts/quality-gates/validate-quality-gates.ts",
    "metrics:dashboard": "tsx src/metrics/cli-dashboard.ts",
    "metrics:report:weekly": "tsx src/metrics/report-generator.ts weekly",
    "metrics:report:monthly": "tsx src/metrics/report-generator.ts monthly",
    "metrics:check-anomalies": "tsx src/metrics/anomaly-detector.ts",
    "director": "tsx src/director/director.ts",
    "captain": "tsx src/captain/captain.ts",
    "player": "tsx src/player/player.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "ora": "^7.0.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "bash -c 'npm run typecheck'"
    ]
  }
}
